@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<DemoMongoDB.Models.Orders>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i
                    class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách đơn hàng : page @CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên khách hàng</th>
                        <th>Email</th>
                        <th>Khoá học đã mua</th>
                        <th>Ngày mua hàng</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var order in Model)
                        {
                            <tr>
                                <td>@order._id</td>
                                <td>@order.CustomerName</td>
                                <td>@order.CustomerEmail</td>
                                <td>
                                    @foreach (var detail in order.OrderDetails)
                                    {
                                        <div>- @detail.CourseTitle</div>
                                    }
                                </td>
                                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (order.OrderDetails.Any(d => d.Status == true))
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Active</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-warning badge-dot m-r-10"></div>
                                            <div>Inactive</div>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary m-r-5" asp-area="Admin" asp-controller="AdminOrders"
                                        asp-action="Details" asp-route-id="@order._id">View</a>

                                    <a class="btn btn-secondary m-r-5" asp-area="Admin" asp-controller="AdminOrders"
                                        asp-action="Edit" asp-route-id="@order._id">Edit</a>

                                    <a class="btn btn-success m-r-5" asp-area="Admin" asp-controller="AdminOrders"
                                        asp-action="Delete" asp-route-id="@order._id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div class="text-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
