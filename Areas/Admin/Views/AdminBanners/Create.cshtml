@model DemoMongoDB.Models.Banners

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="~/Adminassets/summernote/summernote-bs4.css" rel="stylesheet" />
    <link href="~/Adminassets/summernote/summernote.css" rel="stylesheet" />
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />

    <style>
        #header-carousel {
            position: relative;
        }

        #bannerHeaderText,
        #bannerText,
        #bannerButton {
            position: absolute;
            cursor: move;
        }

        #bannerHeaderText {
            cursor: move;
            /* Text cursor */
        }

        #bannerText {
            cursor: move;
            /* Text cursor */
        }

        #bannerButton {
            cursor: pointer;
            /* Pointer cursor */
        }
    </style>

}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="~/assets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>

</html>

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i
                    class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPosts" asp-action="Index">Danh sách Banner
                :
                page @ViewBag.CurrentPage</a>
            <span class="breadcrumb-item active">Tạo mới Banner</span>
        </nav>
    </div>
</div>
<form asp-controller="AdminBanners" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header1 no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="media align-items-center m-b-15">
            </div>
            <div class="m-b-15">
                <button class="btn btn-primary1">
                    <i class="anticon anticon-save"></i>
                    <span>Save</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin Banner</a>
            </li>
        </ul>
    </div>

    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="container-fluid p-0 pb-5 mb-5">
                    <div id="header-carousel" class="carousel slide carousel-fade" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active" style="min-height: 300px;">
                                <img id="bannerImage" class="position-relative w-100" src="~/images/banners/default.jpg"
                                    style="min-height: 300px; object-fit: cover;">
                                <div class="carousel-caption d-flex align-items-center justify-content-center">
                                    <div class="p-5" style="width: 100%; max-width: 900px">
                                        <h1 id="bannerHeaderText" class="display-3 text-white mb-md-4"
                                            style="cursor: move;">Preview Header
                                            Text</h1>
                                        <h5 id="bannerText" class="text-white mb-md-3" style="cursor: move;">Preview
                                            Banner Text</h5>
                                        <a id="bannerButton" href=""
                                            class="btn btn-primary py-md-2 px-md-4 font-weight-semi-bold mt-2"
                                            style="display:none; cursor: pointer;">Button Text</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="bannerNameInput">Tên banner</label>
                        <input type="text" class="form-control" asp-for="BannerName" id="bannerNameInput">
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="font-weight-semibold" for="fileInput">Ảnh đại diện</label>
                            <input id="fileInput" name="fThumb" type="file" class="form-control-file" asp-for="Thumb">
                            <span asp-validation-for="Thumb" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="m-t-25">
                            <div class="form-group d-flex align-items-center">
                                <div class="switch m-r-10">
                                    <input type="checkbox" asp-for="Active" checked="">
                                    <label for="Active"></label>
                                </div>
                                <label>Active</label>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-4">
                                    <label class="font-weight-semibold" for="bannerHeaderTextInput">Banner Header
                                        Text</label>
                                    <input id="bannerHeaderTextInput" type="text" class="form-control"
                                        asp-for="BannerHeaderText">
                                </div>
                                <div class="form-group col-sm-4">
                                    <label class="font-weight-semibold" for="bannerTextInput">Banner Text</label>
                                    <input id="bannerTextInput" type="text" class="form-control" asp-for="BannerText">
                                </div>
                                <div class="form-group col-sm-4">
                                    <label class="font-weight-semibold" for="buttonTextInput">Button Text</label>
                                    <input id="buttonTextInput" type="text" class="form-control" asp-for="ButtonText">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="headerTextPosX">Header Text Position X</label>
                        <input id="headerTextPosX" type="text" class="form-control" readonly />
                        <input type="hidden" name="BannerHeaderTextLeft" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="headerTextPosY">Header Text Position Y</label>
                        <input id="headerTextPosY" type="text" class="form-control" readonly />
                        <input type="hidden" name="BannerHeaderTextTop" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="bannerTextPosX">Banner Text Position X</label>
                        <input id="bannerTextPosX" type="text" class="form-control" readonly />
                        <input type="hidden" name="BannerTextLeft" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="bannerTextPosY">Banner Text Position Y</label>
                        <input id="bannerTextPosY" type="text" class="form-control" readonly />
                        <input type="hidden" name="BannerTextTop" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="buttonPosX">Button Position X</label>
                        <input id="buttonPosX" type="text" class="form-control" readonly />
                        <input type="hidden" name="BannerButtonLeft" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="buttonPosY">Button Position Y</label>
                        <input id="buttonPosY" type="text" class="form-control" readonly />
                        <input type="hidden" name="BannerButtonTop" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <!-- page js -->
    <script src="~/Adminassets/vendors/select2/select2.min.js"></script>
    <script src="~/Adminassets/js/pages/e-commerce-product-edit.js"></script>
    <script src="~/Adminassets/js/vendors.min.js"></script>
    <script src="~/Adminassets/js/app.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="~/Adminassets/summernote/summernote-bs4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        jQuery(document).ready(function () {
            $('.summnernote').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200, // set editor height
                minHeight: null, // set minimum height of editor
                maxHeight: null, // set maximum height of editor
                focus: true // set focus to editable area after intitializing summernote
            });

            function updatePositionFields() {
                $("#headerTextPosX").val($("#bannerHeaderText").position().left);
                $("#headerTextPosY").val($("#bannerHeaderText").position().top);
                $("#bannerTextPosX").val($("#bannerText").position().left);
                $("#bannerTextPosY").val($("#bannerText").position().top);
                $("#buttonPosX").val($("#bannerButton").position().left);
                $("#buttonPosY").val($("#bannerButton").position().top);

                $("input[name='BannerHeaderTextLeft']").val($("#bannerHeaderText").position().left);
                $("input[name='BannerHeaderTextTop']").val($("#bannerHeaderText").position().top);
                $("input[name='BannerTextLeft']").val($("#bannerText").position().left);
                $("input[name='BannerTextTop']").val($("#bannerText").position().top);
                $("input[name='BannerButtonLeft']").val($("#bannerButton").position().left);
                $("input[name='BannerButtonTop']").val($("#bannerButton").position().top);
            }

            $("#bannerHeaderText, #bannerText, #bannerButton").draggable({
                containment: ".carousel-inner",
                stop: updatePositionFields
            });

            // Function to handle file input change and update the image preview
            document.getElementById('fileInput').addEventListener('change', function (event) {
                var file = event.target.files[0];
                if (file) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        document.getElementById('bannerImage').src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Update preview text dynamically
            document.getElementById('bannerHeaderTextInput').addEventListener('input', function () {
                document.getElementById('bannerHeaderText').innerText = this.value;
            });
            document.getElementById('bannerTextInput').addEventListener('input', function () {
                document.getElementById('bannerText').innerText = this.value;
            });
            document.getElementById('buttonTextInput').addEventListener('input', function () {
                var button = document.getElementById('bannerButton');
                button.innerText = this.value;
                button.style.display = this.value ? 'inline-block' : 'none';
            });
            document.getElementById('activeButtonInput').addEventListener('change', function () {
                document.getElementById('bannerButton').style.display = this.checked ? 'inline-block' : 'none';
            });
        });
    </script>
}
