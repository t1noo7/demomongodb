@model DemoMongoDB.Models.Categories

@{
    ViewData["Title"] = "Thông tin danh mục" + Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminPosts" asp-action="Index">Danh sách danh mục</a>
            <span class="breadcrumb-item active">Thông tin danh mục: @Model.Title</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <h4 class="card-title">Thông tin: @Model.Title</h4>
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model._id</td>
                </tr>
                <tr>
                    <td>Tên danh mục:</td>
                    <td>@Model.CatName</td>
                </tr>
                <tr>
                    <td>Tiêu đề:</td>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <td>Ghi chú:</td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>Published:</td>
                    <td>
                        @if (Model.Published)
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-1" checked="" disabled>
                                <label for="switch-1"></label>
                            </div>
                        }
                        else
                        {
                            <div class="switch m-r-10">
                                <input type="checkbox" id="switch-2" disabled>
                                <label for="switch-2"></label>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <td>Ảnh đại diện:</td>
                    <td>
                        <img width="200" height="200" src="~/images/categories/@Model.Thumb" alt="@Model.Title" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
