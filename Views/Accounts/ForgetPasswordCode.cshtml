@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="ForgetPassword" method="post">
                        <div class="form-group">
                            <label for="code">Enter the 6-character code:</label>
                            <input type="text" class="form-control" id="code" name="code" maxlength="6"
                                pattern="[A-Za-z0-9]{6}" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
