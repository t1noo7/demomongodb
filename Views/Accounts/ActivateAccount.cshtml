@{
    ViewData["Title"] = "Account Activation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    @if (ViewData["ActivationSuccess"] != null && (bool)ViewData["ActivationSuccess"])
                    {
                        <div class="alert alert-success" role="alert">
                            Your account has been successfully activated. You can now <a
                                href="@Url.Action("Login", "Accounts")">login</a>.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            Activation failed. Please try registering again or contact support.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
