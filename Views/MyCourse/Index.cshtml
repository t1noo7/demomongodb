@model List<MyCourse>
@{
    @* int CurrentPage = ViewBag.CurrentPage; *@
    ViewData["Title"] = "My Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Category Start -->
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-5">
            <h5 class="text-primary text-uppercase mb-3" style="letter-spacing: 5px;">Hello, @ViewBag.yourName, Here is
                your all courses:</h5>
            <h1>Your Courses</h1>
        </div>
        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="cat-item position-relative overflow-hidden rounded mb-2">
                            <img class="img-fluid" src="/images/courses/@item.Thumb" alt="@item.Title">
                            <a class="cat-overlay text-white text-decoration-none" href="">
                                <h4 class="text-white font-weight-medium">@item.Title</h4>
                                <span>@item.Description</span>
                            </a>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>
<!-- Category Start -->